<%- include('../includes/head.ejs')%>
<body>
<section
  class="login container-fluid w-100 mt-0 flex-column d-flex justify-content-center align-items-center"
>
  <div class="limiter" id="login">
    <div
      class="container-login100"
      style="background-image: url(../images/20220531_141233.jpg)"
    >
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h5 style="color: rgb(255, 211, 211)">
              # Une formation qui change une vie
            </h5>
            <h1
              class="text-light m-0 my-2"
              style="font-size: 4.9rem; font-weight: 900; line-height: 4rem"
            >
              Goma digital academy
            </h1>
            <p class="h5" style="color: rgb(209, 205, 205)">
              La meilleure ecole de formation en developoement web et web mobile
              dans la ville de goma
            </p>
          </div>
          <div class="col-md-5 col-md-offset-1">
            <div class="wrap-login100">
              <form
                class="login100-form validate-form"
                method="POST"
                action="/"
              >
                <span class="login100-form-title"> Connexion </span>
                <span class="login100-form-subtitle m-b-16"> </span>
                <div class="wrap-input100 validate-input m-b-16">
                  <input
                    class="input100"
                    id="username"
                    type="text"
                    name="username"
                    placeholder="Username"
                  />
                </div>
                <div
                  class="wrap-input100 validate-input m-b-16"
                  data-validate="Password is required"
                >
                  <input
                    class="input100"
                    id="password"
                    type="password"
                    name="password"
                    placeholder="Password"
                  />
                </div>
                <div class="flex-sb-m w-full p-b-30">
                  <div class="contact100-form-checkbox"></div>
                  <small>
                    <a href="#" class="txt1 text-danger text-decoration-none">
                      Mot de passe oubli√©?
                    </a>
                  </small>
                </div>
                <div class="container-login100-form-btn p-t-25">
                  <button type="submit" class="login100-form-btn">
                    SE CONNECTER
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
